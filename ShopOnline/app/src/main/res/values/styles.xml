<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/changeColorDrawer</item>
        <item name="homeAsUpIndicator">@drawable/ic_clear_white_24dp</item>
    </style>
    <style name="changeColorDrawer" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <declare-styleable name="PasswordsEditText">
        <attr name="useStrike" format="boolean"></attr>
        <attr name="useCheckValue" format="boolean"></attr>
    </declare-styleable>
</resources>
