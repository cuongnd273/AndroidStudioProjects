<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/custom_select_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">
            <ImageView
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:id="@+id/image_product"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="Iphone 6 Plus"
                    android:id="@+id/name_product"
                    android:textColor="@color/text_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_new"
                    android:textColor="@color/price_product_current"
                    android:text="19.240.000 VND"
                    android:textSize="@dimen/price_new"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_old"
                    android:textColor="@color/price_product_old"
                    android:text="18.000.000 VND"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/price_old"
                    />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:progressDrawable="@drawable/ratingbar"
                    android:numStars="5"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
